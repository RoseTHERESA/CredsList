      <div class="row">
        <div class="col-xs-12">
          <h1><%= @item.name %></h1>
          <img src="<%= @item.pic_url %>" alt="Item Image">
        </div>
      </div>      
      <div class="row">
        <div>Description: </div>
        <div><%= @item.description %></div>
      </div>      
      <div class="row">
        <div>Comments: </div>
        <div>"--Insert Form Here--"</div>
      </div>

    </div>
  </div>


