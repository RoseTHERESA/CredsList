  <div class="row">
    <div class="col-xs-3">
      <img src="<%= @item.user.profilepic_url %>">
      <div>
        <span><%= @item.user.first_name %> <%= @item.user.last_name %></span>
      </div>

      <div>Payments Accepted:</div>
      <img src="<%= asset_path( 'bitcoin.png' ) %>">
      <button type="button" class="btn btn-default">Buy Now</button>
