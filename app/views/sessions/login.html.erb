<h1>Sessions#login</h1>
<p>Find me in app/views/sessions/login.html.erb</p>


<!-- password reset -->
<p>
  <%= link_to "Forgot your password?", new_password_reset_path%>
</p>

<% flash.each do |key, value| %>
  <% if key == "notice" %>
    <%= content_tag :div, value, class: "text-center alert alert-warning" %>
  <% elsif key == "alert" %>
    <%= content_tag :div, value, class: "text-center alert alert-danger" %>
  <% else %>
    <%= content_tag :div, value, class: "text-center alert alert-success" %>
  <% end %>
<% end %>

<h2>Login Page</h2>

<%= form_tag(login_path) do %>

  <%= label_tag(:email)%>
  <%= text_field_tag(:email, params[:email], autofocus: true)%>


  <%= label_tag(:password)%>
  <%= password_field_tag(:password)%>

  <%= submit_tag("Login", class: "btn btn-primary") %>

<% end %>

